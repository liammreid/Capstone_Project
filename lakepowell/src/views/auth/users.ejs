<h1>Admin Users</h1>
<form action="/users" method="POST">
    <table>
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Admin</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(function(user) { %>
                <tr>
                    <td><%= user.firstname %></td>
                    <td><%= user.lastname %></td>
                    <td><%= user.email %></td>
                    <td><input type="checkbox" name="users[]" value="<%= user._id %>" <% if (user.isAdmin) { %>checked<% } %>></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <button type="submit">Submit</button>
</form>