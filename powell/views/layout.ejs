<!doctype html>
<!-- Website Template by freewebsitetemplates.com -->
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title><%=pageTitle%></title>
        <link rel="stylesheet" type="text/css" href="/css/style.css">
        <link rel="stylesheet" type="text/css" href="/css/mobile.css" media="screen and (max-width : 568px)">
        <link rel="shortcut icon" type="image/png" href="/images/powell_enthusiests_logo_final.png"/>
        <script type="text/javascript" src="/js/mobile.js"></script>
    </head>
    <body>
        <div id="header">
            <a href="/" class="logo">
                <img src="/images/powell_enthusiests_logo_final.png" alt="Boat Logo" class="logo">
            </a>
            <div>
                <% if (currentUser) { %>
                    <h2>Welcome, <%= currentUser.firstname %>!</h2>
                <% } %>
            </div>
            <ul id="navigation">
                <li class="<%- path === '/' ? 'selected' : ''%>">
                    <a href="/">home</a>
                </li>
                <li class="<%- path.includes('about') ? 'selected' : ''%>">
                    <a href="/about">about</a>
                </li>
                <li class="<%- path.includes('styles') ? 'selected' : ''%>">
                    <a href="/styles">gallery</a>
                </li>
                <li class="<%- path.includes('blog') ? 'selected' : ''%>">
                    <a href="/blog">blog</a>
                </li>
                <li class="<%- path === '/weather' ? 'selected' : ''%>">
                    <a href="/weather">Weather</a>
                </li>
                <% if (!isAuthenticated) { %>
                    <li>
                        <a href="/auth/login">Login</a>
                    </li>
                    <li>
                        <a href="/auth/signup">Sign Up</a>
                    </li>
                <% } else { %>
                    <li>
                        <a href="/auth/logout">Logout</a>
                    </li>
                    <li>
                        <a href="/auth/favorite-styles">favorite-posts</a>
                    </li>
                <% } %>
                <li class="<%- path === '/contacts/new' ? 'selected' : ''%>">
                    <a href="/contacts/new">contact</a>
                </li>
                <li class="<%- path === '/contacts' ? 'selected' : ''%>">
                    <% if (currentUser && currentUser.isAdmin) { %>
                        <a href="/contacts">contact requests</a>
                    <% } %>
                </li>
                <li>
                    <% if (currentUser && currentUser.isAdmin) { %>
                        <a href="/users">Admin Permissions</a>
                    <% } %>
                </li>
            </ul>
        </div>
        <div id="body">
            <%- body %>
        </div>
        <div id="footer">
            <%- include('partials/social.ejs') %>
        </div>
    </body>
</html>

